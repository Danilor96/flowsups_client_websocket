{
  "compilerOptions": {
    "module": "Preserve",
    "strict": true,
    "moduleDetection": "force",
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "target": "es2016",
    "lib": ["es2021", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
